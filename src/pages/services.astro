---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/navbar/Navbar.astro';
import Container from '../components/ui/Container.astro';
import Footer from '../components/footer/Footer.astro';

const seo = {
  title: "Our Services",
  description: "Comprehensive support from research and evidence generation to implementation. We help organizations translate insight into action through human-centered design, strategic planning, and capacity building.",
  keywords: "research services, evidence generation, human-centered design, strategy consulting, capacity building, program design, policy development",
};

const services = [
  {
    title: "Research & Evidence Generation",
    tagline: "Insights That Drive Decisions",
    description: "We design and conduct research that is decision-focusedâ€”producing insights that are relevant, timely, and usable by leaders and practitioners.",
    features: [
      "Needs assessments and baseline studies",
      "Monitoring, evaluation, and learning (MEL)",
      "Literature reviews and evidence synthesis",
      "Data analysis and insight generation",
      "Participatory research and consultation"
    ],
    icon: "ðŸ“Š"
  },
  {
    title: "Human-Centered Design & Innovation",
    tagline: "Solutions Shaped by People",
    description: "We apply human-centered design to ensure solutions are shaped by the needs, experiences, and constraints of the people and systems involved.",
    features: [
      "User research and stakeholder engagement",
      "Co-design workshops and ideation",
      "Prototyping and testing",
      "Service design and journey mapping",
      "Innovation labs and design sprints"
    ],
    icon: "ðŸŽ¨"
  },
  {
    title: "Program, Strategy & Policy Design",
    tagline: "From Vision to Action",
    description: "We support the design of programs, strategies, and policies that are clear, implementable, and aligned with institutional realities.",
    features: [
      "Strategic planning and roadmapping",
      "Program design and theory of change",
      "Policy development and analysis",
      "Implementation frameworks",
      "Change management support"
    ],
    icon: "ðŸŽ¯"
  },
  {
    title: "Capacity Building, Training & Advisory",
    tagline: "Building Skills That Last",
    description: "Through training and advisory support, we strengthen the ability of teams and institutions to apply knowledge, adapt strategies, and sustain impact over time.",
    features: [
      "Customized training programs",
      "Workshops and facilitation",
      "Coaching and mentoring",
      "Organizational development",
      "Knowledge management systems"
    ],
    icon: "ðŸ’¡"
  }
];

const approach = [
  {
    step: "01",
    title: "Understand",
    description: "We start by deeply understanding your context, challenges, and goals through research and stakeholder engagement."
  },
  {
    step: "02",
    title: "Design",
    description: "We co-create solutions with you, ensuring they are grounded in evidence and shaped by the people who will use them."
  },
  {
    step: "03",
    title: "Implement",
    description: "We support you through implementation with practical tools, capacity building, and adaptive learning."
  },
  {
    step: "04",
    title: "Sustain",
    description: "We build your capacity to sustain impact, adapting and evolving solutions as contexts change."
  }
];
---

<Layout 
  title={seo.title}
  description={seo.description}
  keywords={seo.keywords}
>
  <Navbar />
  
  <main class="relative">
    <!-- Hero Section -->
    <section class="w-full bg-gradient-to-br from-primary-light/20 via-white to-primary-green/5 pt-[60px] min-[320px]:pt-[72px] min-[400px]:pt-[84px] sm:pt-[96px] md:pt-[119px] relative overflow-hidden">
      <!-- Animated Background Pattern -->
      <div class="absolute inset-0 opacity-[0.03] pointer-events-none">
        <div class="absolute top-20 left-10 w-64 h-64 bg-primary-green rounded-full blur-3xl animate-pulse"></div>
        <div class="absolute bottom-20 right-10 w-96 h-96 bg-primary-light rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
      </div>
      
      <!-- Floating Service Badges -->
      <div class="absolute top-32 left-[5%] hidden lg:block" data-aos="fade-right" data-aos-delay="300">
        <div class="bg-white/80 backdrop-blur-sm border-2 border-primary-green/30 rounded-2xl px-6 py-4 shadow-xl rotate-[-5deg] hover:rotate-0 transition-transform duration-300">
          <div class="text-3xl mb-2">ðŸ“Š</div>
          <div class="font-semibold text-primary-green text-sm">Research</div>
        </div>
      </div>
      
      <div class="absolute top-48 right-[8%] hidden lg:block" data-aos="fade-left" data-aos-delay="400">
        <div class="bg-white/80 backdrop-blur-sm border-2 border-primary-green/30 rounded-2xl px-6 py-4 shadow-xl rotate-[8deg] hover:rotate-0 transition-transform duration-300">
          <div class="text-3xl mb-2">ðŸŽ¨</div>
          <div class="font-semibold text-primary-green text-sm">Design</div>
        </div>
      </div>
      
      <div class="absolute bottom-32 left-[10%] hidden lg:block" data-aos="fade-right" data-aos-delay="500">
        <div class="bg-white/80 backdrop-blur-sm border-2 border-primary-green/30 rounded-2xl px-6 py-4 shadow-xl rotate-[3deg] hover:rotate-0 transition-transform duration-300">
          <div class="text-3xl mb-2">ðŸŽ¯</div>
          <div class="font-semibold text-primary-green text-sm">Strategy</div>
        </div>
      </div>
      
      <div class="absolute bottom-40 right-[5%] hidden lg:block" data-aos="fade-left" data-aos-delay="600">
        <div class="bg-white/80 backdrop-blur-sm border-2 border-primary-green/30 rounded-2xl px-6 py-4 shadow-xl rotate-[-6deg] hover:rotate-0 transition-transform duration-300">
          <div class="text-3xl mb-2">ðŸ’¡</div>
          <div class="font-semibold text-primary-green text-sm">Training</div>
        </div>
      </div>
      
      <!-- Geometric Shapes -->
      <div class="absolute top-1/4 left-0 w-1 h-32 bg-gradient-to-b from-primary-green to-transparent opacity-20"></div>
      <div class="absolute top-1/3 right-0 w-1 h-48 bg-gradient-to-b from-transparent via-primary-light to-transparent opacity-20"></div>
      
      <Container 
        maxWidth="full" 
        padding="lg"
        class="py-12 min-[320px]:py-16 min-[400px]:py-20 sm:py-24 md:py-28 lg:py-32 relative z-10"
      >
        <div class="max-w-5xl mx-auto">
          <!-- Split Layout -->
          <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12 items-center">
            <!-- Left Side - Main Content -->
            <div class="lg:col-span-7">
              <div class="flex items-center gap-4 mb-6 min-[320px]:mb-8" data-aos="fade-right">
                <div class="h-1 w-12 bg-primary-green"></div>
                <span class="font-semibold text-primary-green text-sm uppercase tracking-wider">What We Offer</span>
              </div>
              
              <h1 class="
                font-bold text-primary-green
                text-2xl min-[320px]:text-3xl min-[400px]:text-4xl sm:text-5xl md:text-6xl lg:text-7xl
                leading-tight mb-6 min-[320px]:mb-8
              " data-aos="fade-up" data-aos-delay="100">
                Services That <span class="text-primary-text">Deliver</span> Results
              </h1>
              
              <p class="
                font-normal text-primary-text
                text-sm min-[320px]:text-base min-[400px]:text-lg sm:text-xl
                leading-relaxed mb-8
              " data-aos="fade-up" data-aos-delay="200">
                From research and strategy to design and implementation, we provide comprehensive support to help organizations turn knowledge into action and achieve measurable impact.
              </p>
              
              <div class="flex flex-wrap gap-4" data-aos="fade-up" data-aos-delay="300">
                <a href="#services-grid" class="inline-flex items-center gap-2 bg-primary-green text-white px-6 py-3 rounded-lg font-semibold hover:bg-primary-green/90 transition-colors">
                  Explore Services
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </a>
              </div>
            </div>
            
            <!-- Right Side - Decorative Element -->
            <div class="lg:col-span-5 relative" data-aos="fade-left" data-aos-delay="400">
              <div class="relative">
                <!-- Large Star Icon -->
                <div class="flex justify-center lg:justify-end">
                  <div class="relative">
                    <img
                      src="/images/star-icon.svg"
                      alt=""
                      class="w-64 h-64 md:w-80 md:h-80 lg:w-96 lg:h-96 opacity-10"
                      aria-hidden="true"
                    />
                    <!-- Overlapping Badge -->
                    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
                      <div class="bg-primary-green text-white rounded-2xl px-8 py-6 shadow-2xl text-center">
                        <div class="text-4xl font-bold mb-2">4</div>
                        <div class="text-sm font-semibold">Core Services</div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </Container>
    </section>

    <!-- Services Grid -->
    <section id="services-grid" class="w-full bg-white">
      <Container 
        maxWidth="full" 
        padding="lg"
        class="py-12 min-[320px]:py-16 min-[400px]:py-20 sm:py-24 md:py-28 lg:py-32"
      >
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 min-[320px]:gap-10 min-[400px]:gap-12 sm:gap-16 md:gap-20">
          {services.map((service, index) => (
            <div 
              class="
                group
                bg-gradient-to-br from-white to-primary-light/5
                border-2 border-primary-green/20
                rounded-xl
                p-6 min-[320px]:p-7 min-[400px]:p-8 sm:p-10
                transition-all duration-300
                hover:border-primary-green/50 hover:shadow-2xl hover:-translate-y-2
                relative overflow-hidden
              "
              data-aos="fade-up"
              data-aos-delay={index * 100}
            >
              <!-- Decorative Element -->
              <div class="absolute -top-6 -right-6 opacity-5 group-hover:opacity-10 transition-opacity pointer-events-none">
                <svg width="120" height="120" viewBox="0 0 47 46" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M46.6601 22.9999C46.8808 22.9979 47 23 47 23C47 23 46.8806 23.0017 46.6601 22.9999C44.7835 23.0164 35.5656 23.3221 29.8233 27.6371C23.9488 32.0515 23.6097 43.7706 23.5944 45.7225C23.5959 45.9031 23.5944 46 23.5944 46C23.5944 46 23.593 45.903 23.5944 45.7225C23.5797 43.889 23.2586 33.4281 17.9317 28.1935C12.9209 23.2696 3.34226 22.9703 0.693615 22.9859C0.249828 23 0 23 0 23C0 23 0.249292 22.9885 0.693615 22.9859C3.43078 22.8989 13.5464 22.2754 17.9317 17.8065C23.0281 12.6129 23.5944 0 23.5944 0C23.5944 0 23.7831 12.0565 28.8795 17.621C33.4879 22.6526 44.5783 22.9828 46.6601 22.9999Z" fill="#005E02"/>
                </svg>
              </div>
              
              <div class="relative z-10">
                <!-- Icon -->
                <div class="text-5xl mb-4 min-[320px]:mb-5">
                  {service.icon}
                </div>
                
                <!-- Title & Tagline -->
                <h2 class="
                  font-bold text-primary-green
                  text-lg min-[320px]:text-xl min-[400px]:text-2xl sm:text-3xl
                  mb-2 min-[320px]:mb-3
                ">
                  {service.title}
                </h2>
                
                <p class="
                  font-semibold text-primary-text/70
                  text-sm min-[320px]:text-base min-[400px]:text-lg
                  mb-4 min-[320px]:mb-5 min-[400px]:mb-6
                ">
                  {service.tagline}
                </p>
                
                <!-- Description -->
                <p class="
                  font-normal text-primary-text
                  text-xs min-[320px]:text-sm min-[400px]:text-base sm:text-lg
                  leading-relaxed
                  mb-6 min-[320px]:mb-7 min-[400px]:mb-8
                ">
                  {service.description}
                </p>
                
                <!-- Features -->
                <div class="space-y-3 min-[320px]:space-y-4">
                  <h3 class="
                    font-semibold text-primary-green
                    text-xs min-[320px]:text-sm min-[400px]:text-base
                    uppercase tracking-wide
                  ">
                    What We Offer:
                  </h3>
                  <ul class="space-y-2 min-[320px]:space-y-3">
                    {service.features.map((feature) => (
                      <li class="flex items-start gap-3">
                        <svg class="w-5 h-5 text-primary-green flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                        <span class="
                          font-normal text-primary-text
                          text-xs min-[320px]:text-sm min-[400px]:text-base
                          leading-relaxed
                        ">
                          {feature}
                        </span>
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            </div>
          ))}
        </div>
      </Container>
    </section>

    <!-- Our Approach Section -->
    <section class="w-full bg-primary-text relative overflow-hidden">
      <!-- Decorative Elements -->
      <div class="absolute -left-20 top-20 opacity-10 pointer-events-none">
        <img
          src="/images/star-icon-light.svg"
          alt=""
          class="w-64 h-64 lg:w-96 lg:h-96"
          aria-hidden="true"
        />
      </div>
      <div class="absolute -right-32 bottom-10 opacity-10 pointer-events-none">
        <img
          src="/images/star-icon-light.svg"
          alt=""
          class="w-96 h-96"
          aria-hidden="true"
        />
      </div>
      
      <Container 
        maxWidth="full" 
        padding="lg"
        class="py-12 min-[320px]:py-16 min-[400px]:py-20 sm:py-24 md:py-28 lg:py-32 relative z-10"
      >
        <!-- Section Header -->
        <div class="text-center mb-12 min-[320px]:mb-16 min-[400px]:mb-20 sm:mb-24" data-aos="fade-up">
          <div class="flex justify-center mb-6 min-[320px]:mb-8">
            <img
              src="/images/star-icon-light.svg"
              alt=""
              class="w-10 h-10 min-[320px]:w-12 min-[320px]:h-12"
              aria-hidden="true"
            />
          </div>
          <h2 class="
            font-bold text-primary-green
            text-2xl min-[320px]:text-3xl min-[400px]:text-4xl sm:text-5xl
            mb-4 min-[320px]:mb-6
          ">
            Our Approach
          </h2>
          <p class="
            font-normal text-white
            text-sm min-[320px]:text-base min-[400px]:text-lg sm:text-xl
            leading-relaxed max-w-3xl mx-auto
          ">
            A proven process that moves you from insight to impact
          </p>
        </div>

        <!-- Approach Steps -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 min-[320px]:gap-8 sm:gap-10 md:gap-12">
          {approach.map((item, index) => (
            <div 
              class="relative"
              data-aos="fade-up"
              data-aos-delay={index * 100}
            >
              <!-- Step Number -->
              <div class="
                text-8xl font-bold text-primary-green/20
                absolute -top-8 -left-4
                pointer-events-none
              ">
                {item.step}
              </div>
              
              <div class="
                relative z-10
                bg-white/5 backdrop-blur-sm
                border-2 border-primary-light/30
                rounded-xl
                p-6 min-[320px]:p-7 min-[400px]:p-8
                h-full
                transition-all duration-300
                hover:bg-white/10 hover:border-primary-light/50 hover:transform hover:scale-105
              ">
                <h3 class="
                  font-bold text-primary-light
                  text-xl min-[320px]:text-2xl min-[400px]:text-3xl
                  mb-3 min-[320px]:mb-4
                ">
                  {item.title}
                </h3>
                <p class="
                  font-normal text-white
                  text-xs min-[320px]:text-sm min-[400px]:text-base sm:text-lg
                  leading-relaxed
                ">
                  {item.description}
                </p>
              </div>
            </div>
          ))}
        </div>
      </Container>
    </section>

    <!-- CTA Section -->
    <section class="w-full bg-gradient-to-b from-white to-primary-light/10 relative overflow-hidden">
      <Container 
        maxWidth="full" 
        padding="lg"
        class="py-12 min-[320px]:py-16 min-[400px]:py-20 sm:py-24 md:py-28 lg:py-32"
      >
        <div class="
          bg-gradient-to-br from-primary-text to-primary-text/90
          rounded-xl
          px-6 min-[320px]:px-8 min-[400px]:px-10 sm:px-14 md:px-16 lg:px-20
          py-12 min-[320px]:py-16 min-[400px]:py-20 sm:py-24
          flex flex-col items-center justify-center text-center
          gap-6 min-[320px]:gap-8 sm:gap-10
          shadow-2xl
          relative overflow-hidden
        " data-aos="zoom-in">
          <!-- Decorative Patterns -->
          <div class="absolute top-0 right-0 opacity-10 pointer-events-none">
            <img
              src="/images/star-icon-light.svg"
              alt=""
              class="w-48 h-48"
              aria-hidden="true"
            />
          </div>
          <div class="absolute bottom-0 left-0 opacity-10 pointer-events-none">
            <img
              src="/images/star-icon-light.svg"
              alt=""
              class="w-32 h-32"
              aria-hidden="true"
            />
          </div>
          
          <div class="relative z-10 flex flex-col gap-6 min-[320px]:gap-8 items-center max-w-3xl">
            <h2 class="
              font-bold text-primary-green
              text-2xl min-[320px]:text-3xl min-[400px]:text-4xl sm:text-5xl md:text-6xl
              leading-tight
            ">
              Ready to Turn Insight into Action?
            </h2>
            
            <p class="
              font-normal text-white
              text-sm min-[320px]:text-base min-[400px]:text-lg sm:text-xl md:text-2xl
              leading-relaxed
            ">
              Let us discuss how our services can support your organization in achieving measurable, meaningful impact.
            </p>

            <a
              href="/contact"
              class="
                inline-flex items-center justify-center
                bg-primary-light/12 
                border-2 border-primary-green
                rounded-lg
                px-8 min-[320px]:px-10 min-[400px]:px-12 sm:px-14 md:px-16
                py-3 min-[320px]:py-3.5 min-[400px]:py-4 sm:py-5
                font-bold text-primary-green
                text-sm min-[320px]:text-base min-[400px]:text-lg sm:text-xl
                transition-all duration-300
                hover:bg-primary-green hover:text-white hover:scale-105 hover:shadow-lg
                active:scale-95
              "
            >
              Request a Consultation
            </a>
          </div>
        </div>
      </Container>
    </section>
  </main>
  
  <Footer />
</Layout>
