---
import Container from '../ui/Container.astro';
import Copyright from './Copyright.astro';
import SocialIcon from './SocialIcon.astro';
---

<footer class="bg-primary-text py-3 min-[320px]:py-4 sm:py-5 md:py-6 lg:py-8">
  <Container maxWidth="full">
    <div class="flex flex-col min-[400px]:flex-row items-center justify-between gap-4 min-[400px]:gap-6 sm:gap-8 md:gap-10">
      <!-- Copyright -->
      <Copyright 
        organizationName="The Knowledge Bridge"
        year={2026}
      />
      
      <!-- Social Media Icons -->
      <div class="flex items-center gap-3 min-[320px]:gap-4 sm:gap-5 md:gap-6">
        <SocialIcon 
          href="https://www.linkedin.com/company/knowledge-bridge"
          ariaLabel="Visit our LinkedIn page"
        >
          <svg 
            xmlns="http://www.w3.org/2000/svg" 
            viewBox="0 0 24 24"
            class="w-full h-full fill-white transition-colors hover:fill-primary-green"
          >
            <path d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h14m-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93h2.79M6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37h2.77z"/>
          </svg>
        </SocialIcon>
        
        <!-- Add more social icons as needed -->
        <!-- Example: Twitter/X -->
        <!--
        <SocialIcon 
          href="https://twitter.com/knowledgebridge"
          ariaLabel="Visit our Twitter page"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-full h-full fill-white transition-colors hover:fill-primary-green">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </SocialIcon>
        -->
      </div>
    </div>
  </Container>
</footer>
