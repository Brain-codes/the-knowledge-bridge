---
interface Props {
  href: string;
  target?: string;
  variant?: 'primary' | 'secondary' | 'outline';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
}

const { 
  href, 
  target = '_blank',
  variant = 'primary',
  size = 'md',
  class: className = ''
} = Astro.props;

const baseStyles = 'inline-flex items-center justify-center font-semibold rounded-lg transition-all duration-200 hover:scale-105 active:scale-95';

const variants = {
  primary: 'bg-blue-600 text-white hover:bg-blue-700 shadow-lg hover:shadow-xl',
  secondary: 'bg-gray-900 text-white hover:bg-gray-800 shadow-lg hover:shadow-xl',
  outline: 'border-2 border-blue-600 text-blue-600 hover:bg-blue-50'
};

const sizes = {
  sm: 'px-2 py-1.5 text-[10px] min-[320px]:px-3 min-[320px]:py-2 min-[320px]:text-xs sm:px-4 sm:text-sm',
  md: 'px-3 py-2 text-xs min-[320px]:px-4 min-[320px]:py-2.5 min-[320px]:text-sm sm:px-6 sm:py-3 sm:text-base',
  lg: 'px-4 py-2.5 text-sm min-[320px]:px-5 min-[320px]:py-3 min-[320px]:text-base min-[400px]:px-6 sm:px-8 sm:py-4 sm:text-lg'
};

const buttonClasses = `${baseStyles} ${variants[variant]} ${sizes[size]} ${className}`;
---

<a 
  href={href} 
  target={target}
  rel={target === '_blank' ? 'noopener noreferrer' : undefined}
  class={buttonClasses}
>
  <slot />
</a>
