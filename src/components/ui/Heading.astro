---
interface Props {
  level?: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6';
  size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl' | '2xl' | '3xl';
  weight?: 'normal' | 'medium' | 'semibold' | 'bold' | 'extrabold';
  color?: string;
  class?: string;
  align?: 'left' | 'center' | 'right';
}

const { 
  level = 'h2',
  size = 'lg',
  weight = 'bold',
  color = 'text-primary-dark',
  class: className = '',
  align = 'left'
} = Astro.props;

const Tag = level;

const sizes = {
  xs: 'text-xl',
  sm: 'text-2xl',
  md: 'text-3xl',
  lg: 'text-4xl',
  xl: 'text-5xl',
  '2xl': 'text-6xl',
  '3xl': 'text-7xl'
};

const weights = {
  normal: 'font-normal',
  medium: 'font-medium',
  semibold: 'font-semibold',
  bold: 'font-bold',
  extrabold: 'font-extrabold'
};

const aligns = {
  left: 'text-left',
  center: 'text-center',
  right: 'text-right'
};

const classes = `${sizes[size]} ${weights[weight]} ${color} ${aligns[align]} ${className}`;
---

<Tag class={classes}>
  <slot />
</Tag>
