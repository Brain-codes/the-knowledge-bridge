---
interface Props {
  maxWidth?: 'sm' | 'md' | 'lg' | 'xl' | '2xl' | '3xl' | 'full';
  padding?: 'none' | 'sm' | 'md' | 'lg';
  class?: string;
}

const {
  maxWidth = '3xl',
  padding = 'md',
  class: className = ''
} = Astro.props;

const maxWidths = {
  sm: 'max-w-screen-sm',
  md: 'max-w-screen-md',
  lg: 'max-w-screen-lg',
  xl: 'max-w-screen-xl',
  '2xl': 'max-w-screen-2xl',
  '3xl': 'max-w-7xl',
  full: 'max-w-full'
};

const paddings = {
  none: '',
  sm: 'px-2 min-[320px]:px-3 sm:px-4',
  md: 'px-2 min-[320px]:px-3 min-[400px]:px-4 sm:px-6 md:px-8 lg:px-10',
  lg: 'px-2 min-[320px]:px-3 min-[400px]:px-4 sm:px-6 md:px-8 lg:px-12 xl:px-16'
};

const classes = `${maxWidths[maxWidth]} mx-auto w-full ${paddings[padding]} ${className}`;
---

<div class={classes}>
  <slot />
</div>
