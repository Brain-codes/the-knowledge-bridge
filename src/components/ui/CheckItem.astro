---
interface Props {
  text: string;
  class?: string;
}

const { text, class: className = '' } = Astro.props;
---

<div class={`flex items-center justify-center gap-3 min-[320px]:gap-4 min-[400px]:gap-5 sm:gap-6 md:gap-7 ${className}`}>
  <!-- Check Icon -->
  <div class="flex-shrink-0">
    <svg 
      class="w-5 h-5"
      viewBox="0 0 37 37" 
      fill="none" 
      xmlns="http://www.w3.org/2000/svg"
    >
      <circle cx="18.5" cy="18.5" r="18.5" fill="white"/>
      <path 
        d="M26.5 13L16 23.5L10.5 18" 
        stroke="#15B800" 
        stroke-width="3" 
        stroke-linecap="round" 
        stroke-linejoin="round"
      />
    </svg>
  </div>
  
  <!-- Text -->
  <p class="
    font-normal text-white
    text-xs min-[320px]:text-sm min-[400px]:text-base sm:text-lg md:text-xl lg:text-2xl
    leading-relaxed
  ">
    {text}
  </p>
</div>
