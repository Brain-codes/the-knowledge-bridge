---
interface Props {
  name: string;
  size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl' | '2xl';
  color?: string;
  class?: string;
}

const { 
  name,
  size = 'md',
  color = 'text-current',
  class: className = ''
} = Astro.props;

const sizes = {
  xs: 'w-4 h-4',
  sm: 'w-6 h-6',
  md: 'w-8 h-8',
  lg: 'w-12 h-12',
  xl: 'w-16 h-16',
  '2xl': 'w-24 h-24'
};

const classes = `inline-block ${sizes[size]} ${color} ${className}`;
---

<img src={`/images/${name}`} alt="" class={classes} aria-hidden="true" />
