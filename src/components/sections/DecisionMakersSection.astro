---
import Container from '../ui/Container.astro';
import CheckItem from '../ui/CheckItem.astro';

interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;

const partners = [
  "Corporates and private sector organizations",
  "Development organizations and NGOs",
  "Government and public sector institutions",
  "Funders and senior decision-makers"
];
---

<section class={`w-full overflow-hidden p-[5%] ${className}`}>
  <!-- Container with background image, overlay, and padding -->
  <div 
    class="w-full bg-cover bg-center py-12 min-[320px]:py-16 min-[400px]:py-20 sm:py-24 md:py-28 lg:py-32" 
    style="background-image: linear-gradient(rgba(0, 36, 1, 0.63), rgba(0, 36, 1, 0.63)), url('/images/decision-makers-background.jpg');"
  >
    <Container 
      maxWidth="full" 
      padding="lg"
    >
    <div class="w-full flex flex-col items-center gap-10">
      <!-- Header Section -->
      <div class="flex flex-col items-center gap-1 w-full">
        <!-- Main Title -->
        <h2 class="
          font-semibold text-white text-center
          text-lg min-[320px]:text-xl min-[400px]:text-2xl sm:text-3xl md:text-4xl lg:text-5xl
          leading-tight w-full
        ">
          Built for Real-World Decision-Makers
        </h2>
        
        <!-- Subtitle -->
        <p class="
          font-normal text-white text-center
          text-sm min-[320px]:text-base min-[400px]:text-lg sm:text-xl md:text-2xl
          leading-relaxed
        ">
          We partner with:
        </p>
      </div>

      <!-- Partners List -->
      <div class="w-full max-w-xl flex flex-col gap-4 ">
        {partners.map(partner => (
          <CheckItem text={partner} />
        ))}
      </div>

      <!-- Footer Text -->
      <p class="
        font-medium text-white text-center
        text-xs min-[320px]:text-sm min-[400px]:text-base sm:text-lg md:text-xl lg:text-2xl
        leading-relaxed max-w-3xl
      ">
        Our work is designed to be rigorous without being academic, strategic without being abstract, and professional without losing its human touch.
      </p>
    </div>
    </Container>
  </div>
</section>
