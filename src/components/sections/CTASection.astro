---
import Container from '../ui/Container.astro';

interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<section class={`relative w-full bg-white ${className}`}>
  <Container 
    maxWidth="full" 
    padding="lg"
    class="py-12 min-[320px]:py-16 min-[400px]:py-20 sm:py-24 md:py-28 lg:py-32"
  >
    <!-- CTA Card -->
    <div class="
      bg-primary-text 
      rounded-lg min-[320px]:rounded-xl
      px-4 min-[320px]:px-6 min-[400px]:px-8 sm:px-12 md:px-16 lg:px-20 xl:px-24
      py-10 min-[320px]:py-12 min-[400px]:py-16 sm:py-20 md:py-24 lg:py-28
      flex flex-col items-center justify-center
      gap-8 min-[320px]:gap-10 min-[400px]:gap-12 sm:gap-16 md:gap-20 lg:gap-24
    ">
      <!-- Content Section -->
      <div class="flex flex-col items-center gap-3 min-[320px]:gap-4 min-[400px]:gap-5 w-full max-w-4xl">
        <!-- Main Title -->
        <h2 class="
          font-semibold text-primary-green text-center
          text-xl min-[320px]:text-2xl min-[400px]:text-3xl sm:text-4xl md:text-5xl lg:text-6xl
          leading-tight w-full
        ">
          Let's Build the Bridge Together
        </h2>
        
        <!-- Description -->
        <p class="
          font-normal text-white text-center
          text-xs min-[320px]:text-sm min-[400px]:text-base sm:text-lg md:text-xl lg:text-2xl
          leading-relaxed max-w-3xl
        ">
          If your organization is navigating complex decisions and wants to ensure that insight leads to action, we're ready to partner with you.
        </p>
      </div>

      <!-- CTA Button -->
      <div class="flex justify-center">
        <a
          href="/contact"
          class="
            inline-flex items-center justify-center
            bg-primary-light/12 
            border border-primary-green
            rounded-md min-[320px]:rounded-lg
            px-6 min-[320px]:px-8 min-[400px]:px-10 sm:px-12 md:px-14
            py-3 min-[320px]:py-3.5 min-[400px]:py-4 sm:py-4.5 md:py-5
            font-bold text-primary-green
            text-sm min-[320px]:text-base min-[400px]:text-lg sm:text-xl
            transition-all duration-200
            hover:bg-primary-light/20 hover:scale-105
            active:scale-95
          "
        >
          Get in touch
        </a>
      </div>
    </div>
  </Container>
</section>
