---
interface Props {
  title: string;
  description: string;
  class?: string;
}

const { title, description, class: className = '' } = Astro.props;
---

<div class={`
  relative
  bg-primary-light/15
  border border-primary-light
  rounded-lg min-[320px]:rounded-xl min-[400px]:rounded-2xl
  p-3 min-[320px]:p-4 min-[400px]:p-6 sm:p-8 md:p-10 lg:p-12
  ${className}
`} data-aos="fade-up">
  <div class="flex flex-col gap-3 min-[320px]:gap-4 min-[400px]:gap-5 sm:gap-6 md:gap-7">
    <!-- Title -->
    <h3 class="
      font-medium text-primary-light
      text-sm min-[320px]:text-base min-[400px]:text-lg sm:text-xl md:text-2xl lg:text-3xl
      leading-tight
    ">
      {title}
    </h3>
    
    <!-- Description -->
    <p class="
      font-medium text-white
      text-xs min-[320px]:text-sm min-[400px]:text-base sm:text-lg md:text-xl lg:text-2xl
      leading-relaxed
    ">
      {description}
    </p>
  </div>
</div>
