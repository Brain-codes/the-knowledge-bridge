---
interface DescriptionItem {
  subtitle: string;
  text: string;
}

interface Props {
  title: string;
  description: string | DescriptionItem[];
  class?: string;
}

const { title, description, class: className = '' } = Astro.props;
---

<div class={`flex flex-col gap-4 min-[320px]:gap-5 min-[400px]:gap-6 sm:gap-8 md:gap-10 lg:gap-12 ${className}`}>
  <!-- Title with Star Icon -->
  <div class="flex items-start min-[400px]:items-center gap-3 min-[320px]:gap-4 min-[400px]:gap-5">
    <!-- Star Icon -->
    <div class="flex-shrink-0">
<svg width="47" height="46" viewBox="0 0 47 46" fill="none" xmlns="http://www.w3.org/2000/svg">
<path d="M46.6601 22.9999C46.8808 22.9979 47 23 47 23C47 23 46.8806 23.0017 46.6601 22.9999C44.7835 23.0164 35.5656 23.3221 29.8233 27.6371C23.9488 32.0515 23.6097 43.7706 23.5944 45.7225C23.5959 45.9031 23.5944 46 23.5944 46C23.5944 46 23.593 45.903 23.5944 45.7225C23.5797 43.889 23.2586 33.4281 17.9317 28.1935C12.9209 23.2696 3.34226 22.9703 0.693615 22.9859C0.249828 23 0 23 0 23C0 23 0.249292 22.9885 0.693615 22.9859C3.43078 22.8989 13.5464 22.2754 17.9317 17.8065C23.0281 12.6129 23.5944 0 23.5944 0C23.5944 0 23.7831 12.0565 28.8795 17.621C33.4879 22.6526 44.5783 22.9828 46.6601 22.9999Z" fill="#005E02"/>
</svg>

    </div>
    
    <!-- Title -->
    <h2 class="
      font-medium text-primary-text
      text-base min-[320px]:text-lg min-[400px]:text-xl sm:text-2xl md:text-3xl lg:text-4xl
      leading-tight
    ">
      {title}
    </h2>
  </div>

  <!-- Description -->
  {typeof description === 'string' ? (
    <div class="
      text-primary-text font-normal
      text-xs min-[320px]:text-sm min-[400px]:text-base sm:text-lg md:text-xl
      leading-relaxed
      whitespace-pre-line
    ">
      {description}
    </div>
  ) : (
    <div class="flex flex-col gap-6 min-[320px]:gap-7 min-[400px]:gap-8 sm:gap-10 md:gap-12">
      {description.map((item) => (
        <div class="flex flex-col gap-2 min-[320px]:gap-3">
          {item.subtitle && (
            <h3 class="
              font-semibold text-primary-text
              text-xs min-[320px]:text-sm min-[400px]:text-base sm:text-lg md:text-xl
            ">
              {item.subtitle}
            </h3>
          )}
          <p class="
            text-primary-text font-normal
            text-xs min-[320px]:text-sm min-[400px]:text-base sm:text-lg md:text-xl
            leading-relaxed
          ">
            {item.text}
          </p>
        </div>
      ))}
    </div>
  )}
</div>
